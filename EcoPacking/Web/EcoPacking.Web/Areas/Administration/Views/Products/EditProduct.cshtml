@model EcoPacking.Web.ViewModels.Products.SingleProductViewModel; 

@{
    this.ViewData["Title"] = "EditBike";
}

<div class="row justify-content-center">
    <img src="@Model.ImageUrl" style="max-height: 335px;" alt="Image" />
</div>

<form method="post" class="col-md-7 offset-4 text-center" enctype="application/x-www-form-urlencoded">

    <div asp-validation-summary="ModelOnly" class="text-danger col-md-12"></div>

    <div class="col-md-7">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" value="@Model.Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-7">
        <label asp-for="Details"></label>
        <textarea asp-for="Details" class="form-control" value="@Model.Details" rows="5"></textarea>
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>
    <div class="col-md-7">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" value="@Model.Price"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="col-md-7">
        <label asp-for="UnitsPerCase"></label>
        <input asp-for="UnitsPerCase" class="form-control" value="@Model.UnitsPerCase"/>
        <span asp-validation-for="UnitsPerCase" class="text-danger"></span>
    </div>
    <div class="col-md-7">
        <label asp-for="AvailableUnits"></label>
        <input asp-for="AvailableUnits" class="form-control" value="@Model.AvailableUnits"/>
        <span asp-validation-for="AvailableUnits" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary mt-4" value="Update" />

</form>