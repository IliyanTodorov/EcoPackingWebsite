@model EcoPacking.Web.ViewModels.Products.CreateCategoryInputModel
@{
    this.ViewData["Title"] = "Create Category";
    Layout = "_AdministrationLayout";
}

<form method="post" class="col-sm-6 offset-md-3 ">
    <h1 class="centered">@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>